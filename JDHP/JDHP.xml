	<Frame name="JDHPPlayerDisplay" parent="PlayerFrame">

		<Scripts>
			<OnLoad>
				<!-- Moving default player frame, registering for events -->
				this:RegisterEvent("VARIABLES_LOADED");
			</OnLoad>
			<OnEvent>
				<!-- Updating display values and moving target frame if pet frame is visible -->
				if (event == "VARIABLES_LOADED") then
					JDHP_PlayerFrameOnLoad();
				end
				JDHP_PlayerFrameOnEvent(event);
			</OnEvent>
		</Scripts>

